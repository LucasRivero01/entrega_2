<style>
  .green-button {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
  }

  .green-button:hover {
    background-color: #45a049;
    padding: 10px 20px;
    border-radius: 5px;
  }

  .red-button {
    background-color: red;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
  }

  .red-button:hover {
    background-color: #8B0000;
    padding: 10px 20px;
    border-radius: 5px;
  }

  /*
  Estilo para el encabezado "Productos" */
  h1 {
    font-size: 28px;
    color: #333;
    /*
  Cambia el color del texto según tus preferencias */
    margin-bottom: 20px;
  }

  /*
  Estilo para el formulario */
  #productsForm {
    border: 1px solid #ddd;
    padding:
      20px;
    background-color: #f9f9f9;
    border-radius: 5px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  }

  #cartIdLabel {
    font-size: 16px;
    margin-bottom: 10px;
  }

  .logout-button {
    background-color: red;
    /* Color rojo */
    color: white;
    border:
      none;
    padding: 10px 20px;
    border-radius: 5px;
    float: right;
    text-decoration:
      none;
  }

  .cart-button {
    background-color: blue;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    float: right;
    margin-right: 10px;
    text-decoration: none;
  }

  .delete-button {
    background-color: orangered;
    color:
      white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    float: right;
    margin-right: 10px;
    text-decoration: none;
  }

  table {
    border-collapse:
      collapse;
    width: 100%;
    margin-bottom: 20px;
  }

  th,
  td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  th {
    background-color:
      #f2f2f2;
  }

  tr:hover {
    background-color: #f5f5f5;
  }

  td input[type="submit"] {
    background-color: #4CAF50;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
  }

  td input[type="submit"]:hover {
    background-color: #45a049;
    padding: 10px 20px;
    border-radius: 5px;
  }

  .cart-container {
    margin-bottom: 20px;
    /* Añade espacio entre cada carrito */
  }

  .cart-header {
    display: flex;
    justify-content: space-between;
    align-items:
      center;
    margin-bottom: 10px;
    /* Espacio entre el encabezado y la tabla */
  }

  .return-button {
    background-color: #007bff;
    /* Color de fondo del botón */
    color: #fff;
    /* Color del texto del botón */
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .return-button:hover {
    background-color: #0056b3;
    /* Color de fondo al pasar el ratón por encima */
  }

.total-sale-and-button {
  display: flex;
  align-items: center;
  justify-content: space-between; /* Alinea los elementos a los extremos */
  padding: 10px 20px;
}
</style>
{{#each carts}}
<div class="cart-container">
  <div class="cart-header">
    <h3>Cart ID: {{this._id}}</h3>
    <a href="/products"><button class="return-button">VOLVER A PRODUCTOS</button></a>

  </div>
  <table>
    <thead>
      <tr>
        <th>Producto</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Agregar unidad</th>
        <th>Borrar Producto</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.products}}
      <tr>
        <td>{{this.product.title}}</td>
        <td>{{this.product.price}}</td>
        <td>{{this.quantity}}</td>
        <td>
          <button class="accept-button green-button" data-product-id="{{this.product._id}}">+</button>
        </td>
        <td>
          <button class="subtract-button red-button" data-product-id="{{this.product._id}}">-</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <div class="total-sale-and-button">
    <div class="total-sale">
      <h1>
        <strong>Total Venta: </strong>
        $<span id="totalSaleValue">0.00</span>
      </h1>
    </div>
    <div>
      <button class="finish-button green-button">FINALIZAR COMPRA</button>
    </div>
  </div>
</div>
{{/each}}

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/cart.js"></script>